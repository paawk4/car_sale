<Page x:Class="car_sale.MainInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:car_sale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainInterface">

    <Grid Background="White">
        <StackPanel Orientation="Vertical" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200">
            <Button x:Name="orders_button" Content="Заказы" FontSize="24" Click="orders_button_Click"/>
            <Button x:Name="dilers_button" Content="Дилеры" FontSize="24" Click="dilers_button_Click"/>
            <Button x:Name="cars_button" Content="Автомобили" FontSize="24" Click="cars_button_Click"/>
        </StackPanel>
        <Frame x:Name="MainInterface_Frame" Margin="216,0,0,0" Width="580" Height="450" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Grid>
</Page>
