<Page x:Class="car_sale.regin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:car_sale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="regin">

    <Grid Background="White">
        <Label Content="Введите логин:" HorizontalAlignment="Center" Margin="20,100,0,0" VerticalAlignment="Top" Height="30" Width="200"/>
        <TextBox x:Name="login_textbox" HorizontalAlignment="Center" Margin="20,130,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="30" Width="200"/>
        <PasswordBox x:Name="password_textbox" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="200" Margin="20,190,0,0"/>
        <PasswordBox x:Name="rep_password_textbox" HorizontalAlignment="Center" Margin="20,250,0,0"  VerticalAlignment="Top" Height="30" Width="200"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="200" Margin="20,160,0,0"/>
        <Label Content="Введите пароль повторно:" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="200" Margin="20,220,0,0"/>
        <Button x:Name="regin_button" Content="Регистрация" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,285,100,0"  Width="80" Click="regin_button_Click" />
        <Button x:Name="cancel_button" Content="Отмена" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="105,285,0,0" Width="115" Click="cancel_button_Click"/>
    </Grid>
</Page>
